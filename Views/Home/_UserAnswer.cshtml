@using PsychicsGame.Controllers;
@{
    HomeController homeController = new HomeController();
}
@model List<string>
@{
    ViewBag.Title = "Игра";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Главная</a></li>
            <li class="breadcrumb-item active" aria-current="page">Игра</li>
        </ol>
    </nav>

    <div class="col-md-4">
        <p class="lead">
            <h5>Введите загаданное число и нажмите на кнопку <strong>"Отправить ответ".</strong></h5>
        </p>
        <form method="post" action="/Home/AnswerСheck">
            <div class="form-group">
                <input type="number" v-model="value" name="userValue" min="10" max="99" id="Value" class="form-control" placeholder="Введите число" /><br>
                <span asp-validation-for="userValue" />

                <p><input type="submit" id="AnswerСheck" class="btn btn-warning btn-lg btn-block" value="Отправить ответ" /></p>
            </div>
        </form>

    </div>

    @Html.Partial("_Table")

    <script>
        function disablefirstbutton() {
            this.disabled = true;
            document.getElementById("further").disabled = true;
        }

        function disablesecondbutton() {
            document.getElementById("further").disabled = true;
            document.getElementById("StartGame").disabled = false;
        }
    </script>

</div>
